:root, .light-mode {
  --active-tab-color: var(--accent);
  --base: var(--text);
  --base-1: #FA00FF;
  --base-2: var(--text);
  --base-3: var(--secondary-text-color);
  --base-8: #FA00FF;
  --base-bright: var(--body-background-color);
  --background: var(--main-background-color);
  --color-red: var(--red);
  --background-dark: var(--body-background-color);
  --background-wallet-item: var(--header-background-color);
  --background-dropdown-hover-text: var(--color-white);
  --button-primary: var(--button-normal);
  --button-hover: linear-gradient(0deg, rgba(#fff, 0.1), rgba(#fff, 0.1)), var(--button-normal);
  --button-active: linear-gradient(0deg, rgba(#000, 0.1), rgba(#000, 0.1)), var(--button-normal);
  --button-disabled: linear-gradient(0deg, rgba(#000, 0.1), rgba(#000, 0.1)), var(--button-normal);
  --header-background-cover: var(--main-background-color);
  --text-table-grey: var(--secondary-text-color);
  --order-input-border-color: var(--secondary-text-color);
  --order-input-input-bg: transparent;
  --order-input-input-color: var(--color-white);
  --table-background: var(--body-background-color);
  --table-dark-header-color: var(--header-background-color);
  --title-component-color: var(--header-text);
  --table-even-row-background: var(--body-background-color);
  --checkbox-border-color: var(--secondary-text-color);
  --sign-in-background-color: var(--body-background-color);
  --sign-in-label-color: #FA00FF;
  --sign-in-input-color: #FA00FF;
  --sign-in-input-border-color: var(--secondary-text-color);
  --sign-up-checkbox-color: #FA00FF;
  --sign-up-checkbox-mark-color: #FA00FF;
  --history-action-buy: #FA00FF;
  --history-action-sell: #FA00FF;
  --open-orders-action-buy: var(--green);
  --open-orders-action-sell: var(--red);
  --open-orders-order-buy: var(--green);
  --open-orders-order-sell: var(--red);
  --open-orders-background: var(--button-normal);
  --order-dropdown-background-color: transparent;
  --order-crypto-icon-background-color: transparent;
  --order-crypto-font-color: var(--secondary-text-color);
  --order-input-color: var(--color-white);
  --markets-filter-color: var(--text);
  --markets-filter-active-color: var(--color-white);
  --markets-title-color: var(--header-text);
  --markets-search-border-color: var(--secondary-text-color);
  --markets-selected-color: var(--text);
  --grid-item-bg: #FA00FF;
  --grid-placeholder-bg: #FA00FF;
  --grid-placeholder-border-color: #FA00FF;
  --grid-resizable-border-color: var(--secondary-text-color);
  --pending: #e8af59;

  /* orders */
  --orders-execute-color: #b18d4f;
  --orders-placeholder-color: var(--secondary-text-color);
  --orders-text-secondary-color: var(--header-text);
  --orders-text-primary-color: var(--bright-1);

  /* BASEAPP COLORS */

  --dropdown-border: var(--secondary-text-color);
  --background-dropdown-text: var(--secondary-text-color);
  --background-dropdown-open-text: var(--header-background-color);
  --sign-in-text: var(--primary-text-color);
  --email-form-bg: var(--body-background-color);
  --email-form-border: var(--text);
  --email-form-accent: var(--accent);
  --create-order-text: var(--primary-text-color);
  --sign-up-modal-border: var(--header-background-color);
  --sign-up--modal-text: var(--secondary-text-color);

  --color-green: var(--green);
  --base-9: var(--secondary-text-color);
  --base-new: var(--secondary-text-color);
  --color-white: var(--bright-1);
  --muted-text: var(--secondary-text-color);
  --bright-1: var(--primary-text-color);
  --color-blue: var(--accent);

  --navbar-text-color: var(--primary-text-color);

  --active-color: #FA00FF;
  --table-text-color: var(--secondary-text-color);

    /* wallets */
  --wallets-locked-amount: var(--color-white);
  --wallets-locked-amount-active: var(--color-white);
  --wallets-item-font: var(--color-white);
  --wallets-item-font-active: var(--color-white);
  --wallets-item-bg: var(--body-background-color);
  --wallets-item-bg-active: var(--selected-item);
  --wallets-item-bg-hover: linear-gradient(0deg, rgba(#fff, 0.1), rgba(#fff, 0.1)), var(--selected-item);
  --wallets-item-border: var(--selected-item);
  --wallets-balance: var(--color-white);
  --wallets-table-divider: var(--text);

    /* profile */
  --profile-btn: var(--button-normal);
  --profile-box: var(--body-background-color);
  --profile-grey: var(--secondary-text-color);
  --profile-slider-round: var(--accent);
  --profile-slider: var(--button-normal);
  --profile-activity-header: var(--header-background-color);
  --profile-activity-header-font: var(--header-text);
  --profile-activity-border: var(--header-border);
  --profile-url: var(--accent);

  /* KYC */
  --kyc-title-color: var(--secondary-text-color);
  --kyc-header-color: var(--header-background-color);
  --kyc-header-border: var(--text);
  --kyc-progress-line: var(--secondary-text-color);
  --kyc-active-color: var(--accent);
  --kyc-grey: var(--secondary-text-color);
  --kyc-button: var(--button-normal);

  /* Resend email confirmation screen */
  --email-confirmation-screen-background: var(--body-background-color);
  --email-confirmation-screen-title-background: var(--header-background-color);
  --email-confirmation-screen-title-color: var(--header-text);
  --email-confirmation-screen-text-color: var(--secondary-text-color);

  /* Email verification screen */
  --email-verification-screen-background: var(--body-background-color);

  /* ToolBar */
  --trading-header-white: var(--primary-text-color);
  --trading-header-btn-close: var(--table-dark-header-color);
  --trading-header-selector-background: var(--background-dark);
  --trading-header-selector-border: var(--header-border);
  --trading-header-selector-title: var(--secondary-text-color);
  --trading-header-list-background: var(--trading-header-background);
  --trading-header-fastsearch-button-color-active: var(--bright-1);
  --trading-header-fastsearch-button-border-active: var(--accent);
  --trading-header-positive: var(--green);
  --trading-header-negative: var(--red);
  --trading-header-search-border: var(--header-border);

  /* Tradingview */
  --trading-view-background: var(--body-background-color);
}